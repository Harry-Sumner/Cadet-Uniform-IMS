@page
@model Cadet_Uniform_IMS.Pages.StockCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Uniform[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock[0].Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Stock) {
        <tr>
            <td>
                @foreach(var uniform in Model.Uniform.Where(i => i.UniformID == item.UniformID)) @uniform.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StockID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StockID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StockID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
