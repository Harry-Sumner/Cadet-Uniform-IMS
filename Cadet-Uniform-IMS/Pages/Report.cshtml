@page
@model Cadet_Uniform_IMS.Pages.ReportModel
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Generate Report</h2>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info">
            @Model.StatusMessage
        </div>
    }

    <form method="post">
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select asp-for="Category" class="form-select">
                <option value="">-- All Categories --</option>
                @foreach (var type in Model.UniformTypes)
                {
                    <option value="@type.TypeName">@type.TypeName</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Report Type</label>
            <div>
                <input type="radio" id="stockReport" name="ReportType" value="StockReport" class="form-check-input" />
                <label for="stockReport" class="form-check-label">Stock Report</label>
            </div>
            <div>
                <input type="radio" id="pendingOrderReport" name="ReportType" value="PendingOrderReport" class="form-check-input" />
                <label for="pendingOrderReport" class="form-check-label">Pending Orders Report</label>
            </div>
            <div>
                <input type="radio" id="returnStockReport" name="ReportType" value="ReturnStockReport" class="form-check-input" />
                <label for="returnStockReport" class="form-check-label">Return Stock Report</label>
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Generate Report</button>
        </div>
    </form>
</div>