@page
@model Cadet_Uniform_IMS.Pages.StockCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel='stylesheet' href="~/css/site.css">
</head>
<h1>Create</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="stockForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Stock.UniformID" class="control-label">Uniform:</label>
                <select asp-for="Stock.UniformID" class="form-control" id="uniformDropdown" name="Stock.UniformID">
                    <option value=null></option>
                    @foreach (var uniform in Model.Uniform)
                    {
                        <option value="@uniform.UniformID">@uniform.Name</option>
                    }
                </select>
                <span asp-validation-for="Stock.UniformID" class="text-danger"></span>
            </div>
           
        </form>
        <br />
        <form asp-page-handler="Add">
            @if (Model.Stock != null)
            {
                <input type="hidden" asp-for="Stock.UniformID" />
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Stock.Quantity" class="control-label">Quantity:</label>
                    <input asp-for="Stock.Quantity" class="form-control" value="1" />
                    <span asp-validation-for="Stock.Quantity" class="text-danger"></span>
                </div>
                <br />
                <div class="checkbox-wrapper-35">
                    <input value="private" name="switch" id="switch" type="checkbox" class="switch">
                    <label for="switch">
                        <span class="switch-x-text"></span>
                        <span class="switch-x-toggletext">
                            <span class="switch-x-unchecked"><span class="switch-x-hiddenlabel">Unchecked: </span>New</span>
                            <span class="switch-x-checked"><span class="switch-x-hiddenlabel">Checked: </span>Return</span>
                        </span>
                    </label>
                </div>
                <br />
                @foreach (var uniform in Model.Uniform.Where(i => i.UniformID == Model.Stock.UniformID))
                {
                    @foreach (var a in Model.Attributes.Where(i => i.TypeID == uniform.TypeID))
                    {
                        <div class="form-group">
                            <label for="Attribute_@a.AttributeID" class="control-label">@a.AttributeName:</label>
                            <input type="text" class="form-control" name="Attributes[@a.AttributeID]" id="Attribute_@a.AttributeID" maxlength="3"/>
                            <br />
                        </div>
                    }
                }
                <button class="submit">
                    +
                </button>
            }
        </form>
        
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("uniformDropdown").addEventListener("change", function () {
            document.getElementById("stockForm").submit();
        });
    </script>
}